{
  "name": "bottom",
  "version": "0.0.0",
  "description": "Simple stub factories reminiscent of undefined in Haskell",
  "main": "./dist/bottom.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/higherkinded/bottom",
  "author": "higherkinded <higherkinded@protonmail.com>",
  "license": "BSD-3-Clause",
  "test": "jest",
  "private": false,
  "scripts": {
    "build": "npm run build:bundle && npm run build:declarations",
    "build:declarations": "cp tsconfig.json lib && ./node_modules/.bin/dts-generator --project ./lib --out ./dist/bottom.d.ts && rm ./lib/tsconfig.json",
    "build:bundle": "./node_modules/.bin/webpack --display verbose",
    "watch": "./node_modules/.bin/webpack -w --watch-poll 100 --display verbose",
    "clean": "(find . -name '*~*' -or -name '#*#' | xargs rm 2>&- 1>&-) || exit 0",
    "artifacts:rm": "rm -r dist",
    "artifacts:pub": "npm run clean && npm publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "awesome-typescript-loader": "^5.2.1",
    "dts-generator": "^3.0.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  }
}
